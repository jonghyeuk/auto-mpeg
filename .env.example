# API Keys
# Anthropic API Key (Claude)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# OpenAI API Key (GPT, TTS, DALL-E)
OPENAI_API_KEY=your_openai_api_key_here

# ElevenLabs API Key (Optional, for TTS)
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# Output Settings
OUTPUT_DIR=outputs
KEEP_TEMP_FILES=false

# Quality Check
QUALITY_CHECK_ENABLED=true
QUALITY_MIN_SCORE=70

# Video Settings
VIDEO_RESOLUTION=1920x1080  # 1920x1080, 1280x720, 3840x2160
VIDEO_FPS=30
BURN_SUBTITLES=true

# TTS Settings
TTS_PROVIDER=openai  # openai, elevenlabs, google
TTS_VOICE_ID=alloy  # OpenAI: alloy, echo, fable, onyx, nova, shimmer
TTS_LANGUAGE=ko-KR
TTS_SPEED=1.0

# Logging
LOG_LEVEL=info  # debug, info, warn, error
NODE_ENV=development
